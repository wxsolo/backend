body
  font 14px "jaf-bernino-sans","Lucida Grande","Lucida Sans Unicode","Lucida Sans","Geneva","Verdana","sans-serifLucida Grande", "Helvetica", "Arial", "sans-serif"
  padding 0
  margin 0
.header 
  background #08c
  width: 100%
  .brand
    color #fff
    padding 80px 0 0 0 
    margin 80 auto
    text-align center
    font-size 50px
  .description
    color #fff
    margin 15px auto
    text-align center
    font-size 22px
    padding 0 0 40px 0
  .nav-main
    width 50%
    text-aligin center
    margin 0 auto
    li
      float left
      display inline
      margin 0 0 0 20px
      font-size 18px
    a
     color #fff
    .setting-toggle
      color #fff
      cursor pointer
      
.lgnav
    width 100%
    height 50px
    background #08c
    line-height 50px
    .lgnav-header
      text-align center
      width 50%
      margin 0 auto
    li
     list-style none
     font-size 18px
     a
       color #fff
    
#main
  min-height 600px


.login
  margin 100px auto
  max-width 330px
  .form-signin-heading
    a
     color #000
     text-decoration none
  .form-signin
    max-width 330px
    margin: 5px auto;
    input[type=email],input[type=password]
       margin 15px 0 0 0
    button
        margin 15px 0 0 0
  .socail-login
    margin 25px 0 0 0
    .douban
      margin 10px 0 0 0
      font-size 16px
      line-height 18px
.reg
    margin 100px auto
    max-width 330px
    .form-regin-heading
        a
            color #000
            text-decoration none
    .form-regin
        max-width 330px
        margin: 5px auto;
        input[type=email],input[type=password]
            margin 15px 0 0 0
        button
            margin 15px 0 0 0
    .socail-regin
        margin 25px 0 0 0

.error-tip
  height 22px
  max-width 330px
  margin 15px 0 0 0
  text-aligin center

.setting-content
  margin 15px 0 0 0
  .setting-item
    list-style none
    li
        min-height 100px
        margin 40px 0 0 -40px
.show
    display block
.hide
    display none
.clear
    clear both
.page-brand
    font-size 50px
